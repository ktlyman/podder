{
  "name": "podcast-listener-podscribe",
  "version": "1.0.0",
  "description": "Podcast listener and knowledge base via Podscribe with agent-friendly query interface",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "podscribe-listener": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsx src/cli/index.ts",
    "serve": "node dist/server/api.js",
    "serve:dev": "tsx src/server/api.ts",
    "mcp": "node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts",
    "lint": "npx @carlrannaberg/cclint --fail-on warning",
    "lint:ts": "tsc --noEmit",
    "test": "node --test dist/**/*.test.js",
    "test:dev": "tsx --test src/**/*.test.ts",
    "sync": "node dist/cli/index.js sync",
    "search": "node dist/cli/index.js search"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "commander": "^13.1.0",
    "fast-xml-parser": "^5.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@carlrannaberg/cclint": "^0.2.10",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
